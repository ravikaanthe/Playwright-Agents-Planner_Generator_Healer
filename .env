# Environment Configuration for Playwright Tests
# Base URL for the application under test
BASE_URL=https://www.saucedemo.com

# Test environment settings
TEST_ENV=production
CI=false

# Browser Configuration
BROWSER=chromium
HEADED=false
HEADLESS=true
SLOW_MO=0

# Test execution settings
TIMEOUT=30000
TEST_TIMEOUT=30000
EXPECT_TIMEOUT=5000
NAVIGATION_TIMEOUT=30000

# Retry and parallel execution settings
RETRIES=2
WORKERS=4

# Reporting settings
REPORT_OPEN=on-failure
SCREENSHOT=only-on-failure
VIDEO=retain-on-failure
TRACE=retain-on-failure

# Debug Configuration
DEBUG=false
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Skip specific browsers (set to 'true' to skip)
SKIP_WEBKIT_TESTS=false

# Test data settings - All SauceDemo user types
TEST_USERNAME=standard_user
TEST_PASSWORD=secret_sauce
TEST_USERNAME_STANDARD=standard_user
TEST_USERNAME_LOCKED=locked_out_user
TEST_USERNAME_PROBLEM=problem_user
TEST_USERNAME_PERFORMANCE=performance_glitch_user
TEST_USERNAME_ERROR=error_user
TEST_USERNAME_VISUAL=visual_user

# Performance testing settings
PERFORMANCE_THRESHOLD_LCP=2500
PERFORMANCE_THRESHOLD_FID=100
PERFORMANCE_THRESHOLD_CLS=0.1

# Security testing settings
ENABLE_SECURITY_HEADERS_CHECK=true
ENABLE_SSL_CHECK=true

# Azure DevOps Configuration (for CI/CD)
SYSTEM_TEAMPROJECT=
BUILD_BUILDNUMBER=
BUILD_SOURCEBRANCHNAME=
# SYSTEM_ACCESSTOKEN=your_token_here

# Optional: Email settings for test reporting
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASSWORD=
# EMAIL_RECIPIENTS=

# Optional: Slack/Teams notifications
# SLACK_WEBHOOK_URL=
# TEAMS_WEBHOOK_URL=