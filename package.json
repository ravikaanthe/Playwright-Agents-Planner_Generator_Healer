{
  "name": "playwright-agents-plannergeneratorhealer",
  "version": "1.0.0",
  "description": "Comprehensive Playwright test suite for SauceDemo with Azure CI/CD integration",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ci": "playwright test --reporter=junit,html",
    "test:smoke": "playwright test --grep=@smoke",
    "test:regression": "playwright test --grep=@regression",
    "install:deps": "playwright install --with-deps",
    "install:browsers": "playwright install",
    "report:show": "playwright show-report",
    "report:merge": "playwright merge-reports",
    "clean": "rimraf test-results playwright-report",
    "lint": "eslint tests/**/*.ts",
    "format": "prettier --write tests/**/*.ts"
  },
  "keywords": ["playwright", "testing", "e2e", "azure", "ci/cd", "saucedemo"],
  "author": "Playwright Agents Team",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "dotenv": "^16.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
